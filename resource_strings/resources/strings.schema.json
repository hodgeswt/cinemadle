{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hodgeswill.com/strings.schema.json",
  "title": "Resource Strings",
  "description": "A collection of key-value pairs to be used to localize strings.",
  "type": "object",
  "properties": {
    "culture": {
      "description": "The culture code for which the file defines strings",
      "type": "string"
    },
    "resources": {
      "description": "The resources, set as properties.",
      "type": "array",
      "items": { "$ref": "#/$defs/resource" }
    }
  },
  "required": ["culture"],
  "$defs": { "resource": { "type": "object", "maxProperties": 1 } }
}
